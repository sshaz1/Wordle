<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wordle.NewPlayerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="welcomeText" alignment="CENTER" contentDisplay="CENTER" prefHeight="94.0" prefWidth="290.0" style="-fx-font-size: 64; -fx-font-weight: bold;" text="Welcome">
        <textFill>
            <RadialGradient centerX="0.5444444444444445" centerY="0.4714285714285714" radius="0.5">
                <stops>
                    <Stop>
                        <color>
                            <Color red="0.003000000026077032" green="0.05237579718232155" blue="0.05999999865889549" />
                        </color>
                    </Stop>
                    <Stop offset="1.0">
                        <color>
                            <Color red="0.7567878365516663" green="0.12479999661445618" blue="0.7799999713897705" />
                        </color>
                    </Stop>
                </stops>
            </RadialGradient>
        </textFill>
        <font>
            <Font name="Helvetica Bold" size="28.0" />
        </font>
    </Label>
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter name">
        <font>
            <Font size="30.0" />
        </font>
    </Text>
    <TextField fx:id="name" maxWidth="200.0" promptText="Enter your name" />
    <Button fx:id="goButton" maxWidth="-Infinity" onMouseClicked="#onGoButtonClicked" text="Let's Go" />
    <Pane prefHeight="447.0" prefWidth="560.0" />
    <HBox prefHeight="0.0" prefWidth="560.0">
        <children>
            <!-- "Back" button addition -->
            <Button fx:id="backButton" alignment="BOTTOM_LEFT" onMouseClicked="#onBackButtonClicked" text="Back" />
        </children>
    </HBox>
</VBox>
